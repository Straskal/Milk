{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lua",
      "request": "launch",
      "name": "Lua Launch",
      // path to you main file
      "program": "${workspaceFolder}/main.lua",
      // path to a lua 5.3 interpeter
      "luaexe": "${workspaceFolder}/lua53.exe",
      "cwd": "${workspaceFolder}",
      "luaRuntime": "5.3 32bit",
      "stopOnEntry": false
    },
    {
      "type": "lua-local",
      "request": "launch",
      "name": "Launch Main",
      "program": {
        "file": "${workspaceFolder}/scripts/main.lua",
        "lua": "/usr/local/bin/lua"
      }
    },
    {
      "type": "lua-local",
      "request": "launch",
      "name": "Test",
      "program": {
        "file": "${workspaceFolder}/tests/testrunner.lua",
        "lua": "/usr/local/bin/lua"
      }
    }
  ]
}